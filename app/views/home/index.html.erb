

<table class="table table-sm table-hover table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">24h High</th>
      <th scope="col">24h Low</th>
      <th scope="col">Market Cap</th>

    </tr>
  </thead>
  <tbody class="tbody-light">
    <% @prices['DISPLAY'].each do |key, value| %>
    <tr>
      <th scope="row"><%= key %></th>
      <td><%= value['USD']['PRICE'] %></td>
      <td><%= value['USD']['HIGHDAY'] %></td>
      <td><%= value['USD']['LOWDAY'] %></td>
      <td><%= value['USD']['MKTCAP'] %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/><br/>

<div class="container">
  <div class="row">
    <% for items in @news['Data'] %>
      <div class="col-sm">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= items['imageurl'] %>" alt="<%= items['source'] %>">
          <div class="card-body">
            <h5 class="card-title"><%= items['title']%></h5>
            <p class="card-text"><%= items['body'].truncate(300) %></p>
            <a href="<%= items['url'] %>" class="btn btn-primary">Read more...</a>
          </div>
        </div>
      <br/>
      </div>
    <% end %>
  </div>
</div>
